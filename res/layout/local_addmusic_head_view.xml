<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_cell_selector"
    android:orientation="horizontal" >

    <TextView
        android:id="@id/add_all_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:layout_weight="2.0"
        android:singleLine="true"
        android:text="@string/local_addmusic_addall"
        android:textColor="@color/black_color"
        android:textSize="14.0sp" />

    <ToggleButton
        android:id="@id/btn_addmusic_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3.0dip"
        android:layout_weight="1.0"
        android:background="@drawable/togglebtn_headview_addmusic_slt"
        android:focusable="false"
        android:textOff=""
        android:textOn="" />

</RelativeLayout>