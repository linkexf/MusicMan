<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="60.0dip"
    android:background="@drawable/list_cell_selector"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/play_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5.0dip"
        android:src="@drawable/imageview_list_cell_play"
        android:visibility="gone" />

    <LinearLayout
        android:id="@id/song_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dip"
        android:layout_weight="2.0"
        android:orientation="vertical" >

        <TextView
            android:id="@id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/gray_eighty_percent"
            android:textSize="16.0sp" />

        <TextView
            android:id="@id/songer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@android:color/darker_gray"
            android:textSize="12.0sp" />
    </LinearLayout>

    <ImageView
        android:id="@id/btn_recommend_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:focusable="false"
        android:padding="5.0dip"
        android:src="@drawable/list_cell_recommend_button_add_selector" />

</LinearLayout>